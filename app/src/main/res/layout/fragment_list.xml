<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ListFragment">

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coffee_list"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/affogato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/affogato_title"
        android:padding="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/americano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/americano_title"
        android:padding="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/latte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latte_title"
        android:padding="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cappuccino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cappuccino_title"
        android:padding="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mocha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mocha_title"
        android:padding="8dp"
        android:textSize="16sp" />

</LinearLayout>
